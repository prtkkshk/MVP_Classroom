# InfraLearn Platform Environment Variables

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Admin Credentials (CHANGE THESE IN PRODUCTION!)
NEXT_PUBLIC_ADMIN_USERNAME=admin_username_here
NEXT_PUBLIC_ADMIN_PASSWORD=secure_admin_password_here

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=52428800
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,video/*,audio/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Security Configuration
NEXT_PUBLIC_CSRF_SECRET=your_csrf_secret_here
NEXT_PUBLIC_RATE_LIMIT_WINDOW=900000
NEXT_PUBLIC_RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here

# Database Configuration
DATABASE_URL=your_database_url_here

# Redis Configuration (for caching and sessions)
REDIS_URL=your_redis_url_here

# Monitoring and Analytics
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here 